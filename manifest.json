{
  "manifest_version": 3,
  "name": "Expedia Price Scraper",
  "version": "2.0",
  "permissions": ["identity", "tabs", "scripting", "storage"],
  "host_permissions": ["https://www.expedia.com/*"],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_popup": "/src/popup/popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "firebase/firebase-app.js",
        "firebase/firebase-auth.js",
        "firebase/firebase-firestore.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
